<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:background="@drawable/group90">

    <TextView
        android:id="@+id/sortOrderBy"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:text="Order By:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioOrder" />

    <RadioGroup
        android:id="@+id/sortBy"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortOrderBy">

        <RadioButton
            android:id="@+id/radioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Name" />

        <RadioButton
            android:id="@+id/radioDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance" />

        <RadioButton
            android:id="@+id/radioDrivingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driving Time" />

        <RadioButton
            android:id="@+id/radioPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Transport" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioOrder"
        android:layout_width="317dp"
        android:layout_height="298dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="36dp">



    <RadioButton
        android:id="@+id/radioAsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:checked="true"
        android:text="Ascending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radioOrder" />

    <RadioButton
        android:id="@+id/radioDesc"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Descending"
        app:layout_constraintTop_toBottomOf="@+id/radioDesc"
        tools:layout_editor_absoluteX="31dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>