<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school_info_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/schoolIcon"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="152dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/school" />

        <TextView
            android:id="@+id/schoolName"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="156dp"
            android:text="School Name"
            android:gravity="left|center"
            android:textColor="@color/blackText"
            app:layout_constraintStart_toEndOf="@+id/schoolIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/courseIcon"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schoolIcon"
            app:srcCompat="@drawable/course" />

        <TextView
            android:id="@+id/courseName"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:gravity="left|center"
            android:textColor="@color/blackText"
            android:text="Course Name"
            app:layout_constraintStart_toEndOf="@+id/courseIcon"
            app:layout_constraintTop_toBottomOf="@+id/schoolName" />

        <ImageView
            android:id="@+id/gradeIcon"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseIcon"
            app:srcCompat="@drawable/grade" />

        <TextView
            android:id="@+id/gradeCut"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/blackText"
            android:text="Grade CutOff"
            android:gravity="left|center"
            app:layout_constraintStart_toEndOf="@+id/gradeIcon"
            app:layout_constraintTop_toBottomOf="@+id/courseName" />

        <ImageView
            android:id="@+id/drivingIcon"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gradeIcon"
            app:srcCompat="@drawable/driving_time" />

        <TextView
            android:id="@+id/drivingTime"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:text="Driving Time"
            android:textColor="@color/blackText"
            app:layout_constraintStart_toEndOf="@+id/drivingIcon"
            app:layout_constraintTop_toBottomOf="@+id/gradeCut" />

        <ImageView
            android:id="@+id/distanceIcon"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drivingIcon"
            app:srcCompat="@drawable/distance" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:gravity="left|center"
            android:textColor="@color/blackText"
            android:text="Distance"
            app:layout_constraintStart_toEndOf="@+id/distanceIcon"
            app:layout_constraintTop_toBottomOf="@+id/drivingTime" />

        <ImageView
            android:id="@+id/trainIcon"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/blackText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distanceIcon"
            app:srcCompat="@drawable/public_transport" />

        <TextView
            android:id="@+id/publicTransportTiming"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center"
            android:textColor="@color/blackText"
            android:text="Public Transport Timing"
            app:layout_constraintStart_toEndOf="@+id/trainIcon"
            app:layout_constraintTop_toBottomOf="@+id/distance" />

        <ImageView
            android:id="@+id/web2"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trainIcon"
            app:srcCompat="@drawable/link" />

        <ImageView
            android:id="@+id/watchListLogo"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trainIcon"
            app:srcCompat="@drawable/fire" />

        <TextView
            android:id="@+id/url_display"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:gravity="left|center"
            android:text="url link"
            android:textColor="@color/blackText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.391"
            app:layout_constraintStart_toEndOf="@+id/web2"
            app:layout_constraintTop_toBottomOf="@+id/publicTransportTiming" />

        <TextView
            android:id="@+id/watchCount"
            android:layout_width="237dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:gravity="left|center"
            android:text="WatchList Count"
            android:textColor="@color/blackText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/watchListLogo"
            app:layout_constraintTop_toBottomOf="@+id/url_display" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
